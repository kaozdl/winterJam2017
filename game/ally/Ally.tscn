var input_states = preload('res://utils/input_states.gd')
var player = null
export var follow = true
export var speed = 0.500
var toggle_follow = input_states.new('toggle_follow')

func _ready():
	player = get_node(\"../Player\")
	set_fixed_process(true)

func _fixed_process(delta):
	var direction = player.get_global_pos() - self.get_global_pos()
	if toggle_follow.check() == 2:
		self.follow = false
	else:
		self.follow = true
	if self.follow:
		self.move(direction * speed * delta)
		#self.move_to(player_position)
	if self.is_colliding():
		print (self.get_collider().name)
	else:
		print (\"not_colliding\")"

